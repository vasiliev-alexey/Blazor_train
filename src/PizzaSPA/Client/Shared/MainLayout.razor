@inherits LayoutComponentBase

<div class="sidebar" hidden="@IsHiden">
    <NavMenu />
</div>

<div class="main">
    <div class="top-row px-4">
        <button   @onclick="@(()=>click())">Навигация</button>
    </div>

    <div class="content px-4">
        @Body
    </div>
</div>


@functions
{

    private bool IsHiden = false;


    private void click()
    {
        IsHiden = !IsHiden;
    }

}
